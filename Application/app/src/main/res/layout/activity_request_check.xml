<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/StandardBackGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestCheck">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/box" />

    <Button
        android:id="@+id/RCBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/BackColor"
        android:text="Back"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintVertical_bias="0.853" />

    <TextView
        android:id="@+id/editdetailsbox"
        android:layout_width="412dp"
        android:layout_height="201dp"
        android:layout_marginTop="80dp"
        android:background='@drawable/secondarybackground'
        android:gravity="center"
        android:text="Below you can edit and view your annual leave bookings. Please note, you will not be able to make requests that leave you with more than 30 days booked off
you currently have [] days left to book"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="View and manage holiday viewings"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/editdetailsbox"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="423dp"
        android:layout_height="460dp"
        android:layout_marginTop="224dp"
        android:background="@color/PopUpColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editdetailsbox" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm request?"
        android:textColor="@color/black"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/Requeststartdatetextbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Request start date"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView44"
        tools:layout_editor_absoluteX="57dp" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Request end date"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView46"
        tools:layout_editor_absoluteX="57dp" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="298dp"
        android:layout_height="59dp"
        android:layout_marginBottom="252dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="298dp"
        android:layout_height="59dp"
        android:layout_marginTop="76dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <Button
        android:id="@+id/RCBackToHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to homepage"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="827dp" />

    <Button
        android:id="@+id/RCConfirmBooking"
        android:layout_width="182dp"
        android:layout_height="54dp"
        android:layout_marginTop="29dp"
        android:text="Confirm booking"
        android:background="@color/ConfirmColor"
        app:layout_constraintTop_toBottomOf="@+id/textView46"
        tools:layout_editor_absoluteX="173dp" />

</androidx.constraintlayout.widget.ConstraintLayout>